<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title Section -->
    <TextView
        android:id="@+id/TitleInfoMedoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom du médicament"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Spacer -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@+id/TitleInfoMedoc" />

    <!-- Medication Information Section -->
    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleInfoMedoc"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Dosage and Unit Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dosageInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dosage : " />

                <TextView
                    android:id="@+id/dosageUniteInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Unité : " />
            </LinearLayout>

            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Type and Remaining Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/typeComprimeInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Type de comprimé : " />

                <TextView
                    android:id="@+id/comprimeRestantInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Restants : " />
            </LinearLayout>

            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Quantity Section -->
            <TextView
                android:id="@+id/quantiteInfoMedoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantité : " />

            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Dates and Times Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/debutTraitementInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Début du traitement : " />

                <TextView
                    android:id="@+id/dateFinTraitementInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fin du traitement : " />

            </LinearLayout>

            <TextView
                android:id="@+id/expireInfoMedoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expire : " />

            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Additional Information Section -->
            <TextView
                android:id="@+id/effetsSecondairesInfoMedoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Effets secondaires : " />

            <TextView
                android:id="@+id/prisesInfoMedoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prises : " />

            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- New Elements Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/principeActifnfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Principe Actif : " />

                <TextView
                    android:id="@+id/denominationPrincipeInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dénomination Principe : " />
            </LinearLayout>

            <TextView
                android:id="@+id/dosageSubstanceInfoMedoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dosage Substance : " />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/formePharmaceutiqueInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Forme Pharmaceutique : " />

                <TextView
                    android:id="@+id/voieAdministrationInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Voie d'Administration : " />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
